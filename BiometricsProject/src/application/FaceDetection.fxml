<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="201.0" prefWidth="588.0" xmlns="http://javafx.com/javafx/8.0.152" 
			xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.FaceDetectionController">
   <bottom>
      <HBox prefHeight="35.0" prefWidth="588.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="start_btn" mnemonicParsing="false" onAction="#startCamera" text="Start camera">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="take_picture_btn" mnemonicParsing="false" text="Take picture">
               <HBox.margin>
                  <Insets bottom="10.0" left="365.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
   <center>
      <ImageView fx:id="current_frame" fitHeight="262.0" fitWidth="480.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
